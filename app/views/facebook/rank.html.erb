<h2>Rank your friend</h2>

<%= form_tag("/facebook/rank", :method => "get") do %>
  <%= select_tag(:friend, options_for_select(options_from_friends(@friends))) %>

  <%= submit_tag("Rank") %>
<% end %>

<% if @ranking %>
  <h3>Ranking</h3>

  <ul>
    <% @ranking.each do |name,nb_comments| %>
      <li><%= name %> -- <%= nb_comments %> comment(s)</li>
    <% end %>
  </ul>
<% end %>